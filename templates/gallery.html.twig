<!-- gallery -->
<div class="gallery">
	<div class="container">
		<h3 class="agileits-title">Pet Gallery</h3>
		<div class="container">
			<div class="row searchFilter" >
				<div class="col-sm-12" >
					<div class="input-group" >
						<input id="table_filter" placeholder="Search for a pet name" type="text" class="form-control" aria-label="Text input with segmented button dropdown" >
						<div class="input-group-btn" >
							<button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" ><span class="label-icon" >Category</span> <span class="caret" >&nbsp;</span></button>
							<div class="dropdown-menu dropdown-menu-right" >
								<ul class="category_filters" >
									<li >
										<input checked="checked" class="cat_type category-input" data-label="All" id="all" value="all"  name="radios" type="radio" ><label for="all" >All</label>
									</li>
									<li >
										<input type="radio" name="radios" id="Design" value="dog" ><label class="category-label" for="Design" >Dog</label>
									</li>
									<li >
										<input type="radio" name="radios" id="Marketing" value="cat" ><label class="category-label" for="Marketing" >Cat</label>
									</li>
									<li >
										<input type="radio" name="radios" id="Programming" value="bird" ><label class="category-label" for="Programming" >Bird</label>
									</li>
									<li >
										<input type="radio" name="radios" id="Sales" value="reptile" ><label class="category-label" for="Sales" >Reptile</label>
									</li>
									<li >
										<input type="radio" name="radios" id="Support" value="other" ><label class="category-label" for="Support" >Other</label>
									</li>
								</ul>
							</div>
							<button id="searchBtn" type="button" class="btn btn-secondary btn-search" ><span class="glyphicon glyphicon-search" >&nbsp;</span> <span class="label-icon" >Search</span></button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div id="gallery-div" class="gallery-agileinfo">

			<div class="clearfix"> </div>

		</div>

	</div>
	<div><button id="load-more-btn" type="button" class="btn btn-secondary btn-search" ><span>Load More</span></button></div>
</div>

