<!-- Start Volunteer-form Area -->
<div class="gallery">
	{% if success %}
		<div class="col-lg-8 col-lg-offset-2">
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">
					Ã—</button>
				<span class="glyphicon glyphicon-ok"></span> <strong>Success Message</strong>
				<hr class="message-inner-separator">
				<p>
					Your pet has been successfully uploaded.</p>
			</div>
		</div>
	{% endif %}
	<div class="container" style="margin-bottom: 60px">
		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-60 col-lg-8 col-lg-offset-2">
				<div class="title text-center">
					<h3 style="font-size: 42px">Pet data</h3>
					<p>Include the animal characteristics to help him to a new home.</p>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			{% if app.user %}
			<form id="upload-form" action="uploadpet" enctype="multipart/form-data" method="post" class="col-lg-8 col-lg-offset-2" onsubmit="return checkForm('{{ app.user.email }}');">
			{% else %}
				<form id="upload-form" action="uploadpet" enctype="multipart/form-data" method="post" class="col-lg-8 col-lg-offset-2" onsubmit="return checkForm('{{ app.user }}');">
				{% endif %}

				<div class="form-group">
					<label for="image">Photo:</label><br>
					<input type="file" name="pic"  accept="image/*" required>
				</div>
				<div class="form-group">
					<label for="name">Name:</label>
					<input name="name" type="text" class="form-control" placeholder="Name" required>
				</div>
				<div class="form-group">
					<label for="type-animal">Type animal:</label>
					<select name="type" >
						<option selected="selected" value="dog">Dog</option>
						<option value="cat">Cat</option>
						<option value="reptile">Reptile</option>
						<option value="bird">Bird</option>
						<option value="other">Other</option>
					</select>
				</div>
				<div class="form-group">
					<label for=age>Age:</label>
					<input name="age" type="number" min="1"  class="form-control" placeholder="Months" required>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<textarea name="description" class="form-control" id="exampleTextarea" rows="5"
							  placeholder="Write a description" required></textarea>
				</div>
				<div class="form-group">
					<label for="size-animal">Size:</label>
					<select name="size">
						<option selected="selected" value="XS">Very Small</option>
						<option value="S">Small</option>
						<option value="M">Medium</option>
						<option value="L">Big</option>
						<option value="XL">Very Big</option>
						<option value="XXL">Specially Big</option>
					</select>
				</div>
				<button class="button-orange" type="submit" class="primary-btn float-right">Upload</button>
			</form>
		</div>
	</div>
	<!-- End Volunteer-form Area -->
</div>


